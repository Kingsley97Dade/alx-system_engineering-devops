#!/usr/bin/env bash
# Script to install and configure Nginx to listen on port 80 for all active IPv4 IPs.

# Update package information
sudo apt-get update

# Install Nginx
sudo apt-get install -y nginx

# Backup the default Nginx configuration
sudo cp /etc/nginx/nginx.conf /etc/nginx/nginx.conf.bak

# Configure Nginx to listen on port 80 for all active IPv4 IPs
sudo bash -c 

# Restart Nginx to apply the changes
sudo systemctl restart nginx

echo "Nginx has been configured to listen on port 80 for all active IPv4 IPs."
